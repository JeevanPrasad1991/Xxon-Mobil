<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".dailyentry.ReportActivity"
    tools:showIn="@layout/activity_report">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:id="@+id/beator_dsr_nametext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2.6"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="Beat Name"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="Target No. of Outlets"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/outlat_maerchandising_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="Outlets Achieved (Outlet Merchandised)"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="Outlets Ach %"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="Outlet Merchandised perfectly"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11sp" />


            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="Perfect Ach %"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycl_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp" />

</LinearLayout>
